{
  "name": "react-native-simple-theme",
  "version": "0.1.0",
  "description": "Simple and small theme manager for react-native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/dsznajder/react-native-simple-theme",
  "author": "Damian Sznajder (https://github.com/dsznajder), Micha≈Ç Kantor (https://github.com/kantorm)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dsznajder/react-native-simple-theme/issues"
  },
  "homepage": "https://github.com/dsznajder/react-native-simple-theme#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "16.0.0",
    "@release-it/conventional-changelog": "4.1.0",
    "@types/jest": "27.4.0",
    "@types/react": "17.0.39",
    "@types/react-native": "0.66.15",
    "commitlint": "16.1.0",
    "eslint": "8.9.0",
    "eslint-config-dsznajder": "0.1.12",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.3",
    "pod-install": "0.1.31",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-native": "0.67.2",
    "react-native-builder-bob": "0.18.2",
    "release-it": "14.12.4",
    "typescript": "4.5.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "example"
  ],
  "prettier": {
    "bracketSameLine": false,
    "bracketSpacing": true,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "endOfLine": "auto"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
